<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csc8208Maui.Views.RegistrationPage"
             BackgroundColor="#F2F1F6"
             Style="{StaticResource ContentStyle}">
    <ContentPage.Content>
        <StackLayout Margin="20, 20, 20, 20">
            <StackLayout Margin="0,0,0,20">
                <Label Text="Username:"
                       TextColor="#15A0BF"/>
                <Frame BackgroundColor="White" 
                       BorderColor="Black"
                       Padding="0,0,0,0">
                    <Entry Placeholder="joe.bloggs@mail.com"
                       Text="{Binding EmailAddress}"
                       BackgroundColor="{Binding EmailEntryColour}"
                       Style="{StaticResource EntryStyle}"/>
                </Frame>
                    
            </StackLayout>
            <StackLayout Margin="0,0,0,20">
                <Label Text="Password:"
                       TextColor="#15A0BF"/>
                <Frame BackgroundColor="White" 
                       BorderColor="Black"
                       Padding="0,0,0,0">
                    <Entry Placeholder="Password"
                       Text="{Binding Password}"  
                       IsPassword="True"
                       BackgroundColor="{Binding PasswordEntryColour}"
                       Style="{StaticResource EntryStyle}"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="0,0,0,20">
                <Label Text="Confirm Password:"
                       TextColor="#15A0BF"/>
                <Frame BackgroundColor="White" 
                       BorderColor="Black"
                       Padding="0,0,0,0">
                    <Entry Placeholder="Confirm Password"
                       Text="{Binding ConfirmPassword}"
                       IsPassword="True"
                       BackgroundColor="{Binding PasswordEntryColour}"
                       Style="{StaticResource EntryStyle}"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="0,0,0,20">
                <Label Text="First Name:"
                       TextColor="#15A0BF"/>
                <Frame BackgroundColor="White" 
                       BorderColor="Black"
                       Padding="0,0,0,0">
                    <Entry Placeholder="First Name"
                       Text="{Binding FirstName}"
                       BackgroundColor="{Binding FirstNameEntryColour}"
                       Style="{StaticResource EntryStyle}"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="0,0,0,20">
                <Label Text="Second Name:"
                       TextColor="#15A0BF"/>
                <Frame BackgroundColor="White" 
                       BorderColor="Black"
                       Padding="0,0,0,0">
                    <Entry Placeholder="Second Name"
                       Text="{Binding SecondName}"
                       BackgroundColor="{Binding SecondNameEntryColour}"
                       Style="{StaticResource EntryStyle}"/>
                </Frame>
            </StackLayout>
            <StackLayout Orientation="Horizontal" 
                         Margin="0,0,0,20">
                <Label Text="Verifier Account?"
                       TextColor="#15A0BF"/>
                <CheckBox IsChecked="{Binding IsVerifier}" 
                          Color="Black"
                          HorizontalOptions="EndAndExpand"
                          VerticalOptions="Center"/>
            </StackLayout>
            <Button Text="Sign Up"
                    Command="{Binding SignUpCommand}"
                    IsEnabled="{Binding SignUpButtonClickable}"
                    Style="{StaticResource LoginButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>