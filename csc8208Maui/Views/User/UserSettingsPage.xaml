<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csc8208Maui.Views.User.UserSettingsPage"
             Style="{StaticResource ContentStyle}">
    <ContentPage.Content>
        <StackLayout Spacing="0" Padding="0">
            <Button Text="Notifications" Style="{StaticResource SettingsButton}" Margin="0,50,0,0"/>
            <Button Text="Payment Options" Style="{StaticResource SettingsButton}" Margin="0,20,0,0"/>
            <Button Text="Location" Style="{StaticResource SettingsButton}" Margin="0,20,0,0"/>
            <Button Text="Use Location Services" Style="{StaticResource SettingsButton}"/>
            <Button Text="About" Style="{StaticResource SettingsButton}" Margin="0,20,0,0"/>
            <Button Text="Help" Style="{StaticResource SettingsButton}"/>
            <Button Text="Sign Out"
                    Command="{Binding LogoutCommand}" Style="{StaticResource SettingsButton}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>