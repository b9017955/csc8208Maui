<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csc8208Maui.Views.User.Home"
             Style="{StaticResource ContentStyle}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Featured Event" TextColor="#15A0BF" HorizontalOptions="StartAndExpand" Padding="10,10,0,0"/>
            <ListView x:Name="ListOfEvents" 
                  ItemsSource="{Binding FeaturedEvent}" 
                  RowHeight="135"
                  SeparatorVisibility="None"
                  SelectedItem="{Binding SelectedEvent}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="White" BorderColor="Black" Margin="20,0,20,0" CornerRadius="15" Padding="10">
                                <StackLayout Margin="15, 5, 15, 5">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Artist}" 
                                   TextColor="#F23005"
                                   FontSize="Large"
                                   FontAttributes="Bold"
                                   HorizontalOptions="StartAndExpand"/>
                                        <Label Text="{Binding MusicGenre}"
                                    TextColor="#F2561D"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="Center"/>
                                    </StackLayout>
                                    <Label Text="{Binding Location}"/>
                                    <Label Text="{Binding DoorsOpen}"/>
                                    <Label Text="Buy Now" Background="White" TextColor="#15A0BF" HorizontalOptions="End"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Frame BackgroundColor="White" BorderColor="Black" Margin="20,0,20,0" CornerRadius="15" Padding="5" HeightRequest="25" VerticalOptions="StartAndExpand">
                <Label Text="Search By Category" FontAttributes="Bold" FontSize="Medium" TextColor="#F2561D" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <StackLayout Orientation="Horizontal">
                <Frame BackgroundColor="White" BorderColor="Black" Margin="20,5,20,0" CornerRadius="15" Padding="5" WidthRequest="180" HeightRequest="80" VerticalOptions="StartAndExpand">
                    <StackLayout>
                        <Label Text="Music" FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Image Source="icon_music.png" HeightRequest="40"/>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="White" BorderColor="Black" Margin="20,5,20,0" CornerRadius="15" Padding="5" WidthRequest="180" HeightRequest="80" VerticalOptions="StartAndExpand">
                    <StackLayout>
                        <Label Text="Comedy" FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Image Source="icon_comedy.png" HeightRequest="40"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,0,0,50">
                <Frame BackgroundColor="White" BorderColor="Black" Margin="20,5,20,0" CornerRadius="15" Padding="5" WidthRequest="180" HeightRequest="80" VerticalOptions="StartAndExpand">
                    <StackLayout>
                        <Label Text="Sport" FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Image Source="icon_sport.png" HeightRequest="40"/>
                    </StackLayout>
                </Frame>
                <Frame BackgroundColor="White" BorderColor="Black" Margin="20,5,20,0" CornerRadius="15" Padding="5" WidthRequest="180" HeightRequest="80" VerticalOptions="StartAndExpand">
                    <StackLayout>
                        <Label Text="Theatre" FontAttributes="Bold" FontSize="Large" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        <Image Source="icon_theatre.png" HeightRequest="40"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
